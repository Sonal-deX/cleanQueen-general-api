# Server Configuration
PORT=3000
NODE_ENV=development # development, production, test
APP_URL=http://localhost:3000

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user_here
DB_PASSWORD=your_db_password_here
DB_NAME=your_db_name_here
DB_DIALECT=postgres

# For Sequelize sync options in development (optional)
DB_SYNC_FORCE=false # Set to true to drop and recreate tables (DANGEROUS)
DB_SYNC_ALTER=false # Set to true to attempt to alter tables

# JWT Configuration
JWT_SECRET=your_very_strong_and_long_jwt_secret_key_here
JWT_EXPIRES_IN=1d
JWT_COOKIE_EXPIRES_IN=1 # Days
JWT_ENCRYPTION_KEY=your_32_byte_strong_encryption_key_for_jwt_payload_here # MUST be 32 bytes

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email_username_here
EMAIL_PASSWORD=your_email_password_here
EMAIL_FROM_NAME="Cleaning App Admin"
EMAIL_FROM_ADDRESS="noreply@yourdomain.com"

# CORS Configuration
CLIENT_URL_BROWSER=http://localhost:3001
CLIENT_URL_MOBILE_APP=http://localhost:3002 # Example
